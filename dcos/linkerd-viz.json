{
  "id": "linkerd-viz",
  "instances": 1,
  "cpus": 1.0,
  "mem": 512.0,
  "acceptedResourceRoles": ["slave_public"],
  "maintainer": "hello@buoyant.io",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "buoyantio/linkerd-viz:0.1.4",
      "forcePullImage": true,
      "network": "HOST",
      "privileged": true
    }
  },
  "args": ["dcos"],
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "/"
    }
  ],
  "portDefinitions": [
    {
      "port": 9191,
      "protocol": "tcp",
      "name": "stats"
    },
    {
      "port": 3000,
      "protocol": "tcp",
      "name": "public"
    }
  ],
  "requirePorts": true,
  "env": {
    "MARATHON_HOST": "marathon.mesos",
    "PUBLIC_PORT": "3000",
    "STATS_PORT": "9191",
    "SCRAPE_INTERVAL": "30s"
  }
}
